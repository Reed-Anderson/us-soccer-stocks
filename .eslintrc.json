{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "warn",
        "max-len": [ "warn", 80 ],
        "semi": [ "warn", "never" ],
        "space-in-parens": [ "warn", "always" ],
        "array-bracket-spacing": [ "warn", "always" ],
        "object-curly-spacing": [ "warn", "always" ],
        "no-unreachable": [ "warn" ],
        "comma-dangle": [ "warn", "never" ],
        "key-spacing": [ 1, {
            "singleLine": {
                "afterColon": true,
                "beforeColon": false
            }
        } ],
        "eqeqeq": [ "warn", "always" ],
        "react/prop-types": 0
    }
}
